{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/monashOsman/DataVisualisationTwo/main/data/electionresults17.csv"
  },
  "params": [
    {
      "name": "Uni_Graduates",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 20,
        "max": 50,
        "step": 5,
        "name": "% University Graduates greater than: "
      }
    }
  ],
  "transform": [{"filter": "datum.UniversityGraduatesPerc > Uni_Graduates"}],
  "vconcat": [
    {
      "hconcat": [
        {
            "data": {"values": [{}]},
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "top",
              "text": [
                "The Bubble Chart depicts how income may be negatively",
                "correlated with income..."
              ],
              "dx": 0,
              "dy": 78
            }
          },        {
        "width": 500,
        "height": 400,
        "title": "Percentage Party Preferences by States and Territories",
        "projection": {"type": "Mercator"},
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/monashOsman/DataVisualisationTwo/main/js/STE_2021_AUST_GDA2022.json",
              "format": {
                "type": "topojson",
                "feature": "STE_2021_AUST_GDA2020"
              }
            },
            "mark": {
              "type": "geoshape",
              "fill": "lightgray",
              "stroke": "white"
            }
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/monashOsman/DataVisualisationTwo/main/data/electionresults.csv"
            },
            "mark": {"type": "circle"},
            "encoding": {
              "latitude": {"field": "Longitude", "type": "quantitative"},
              "longitude": {"field": "Latitude", "type": "quantitative"},
              "tooltip": [
                {"field": "State", "type": "nominal"},
                {
                  "field": "Coalition",
                  "type": "quantitative",
                  "format": ",",
                  "title": "% Coalition Votes"
                },
                {
                  "field": "Labor",
                  "type": "quantitative",
                  "format": ",",
                  "title": "% Labor Votes"
                },
                {
                  "field": "Greens",
                  "type": "quantitative",
                  "format": ",",
                  "title": "% Greens Votes"
                },
                {
                  "field": "Percentage Coalition Votes",
                  "type": "quantitative",
                  "format": ",",
                  "title": "Coalition votes vs. Labor (%)"
                }
              ],
              "size": {
                "field": "Greens",
                "type": "quantitative",
                "title": "Percentage of Greens votes",
                "scale": {"domain": [12, 20]}
              },
              "color": {
                "field": "Percentage Coalition Votes",
                "type": "quantitative",
                "title": "Percentage Coalition votes",
                "scale": {"scheme": "redblue"}
              }
            }
          }
        ]
      }
      ]
    },
    {
        "width": 500,
        "height": 325,
        "title": "Proportion Coalition and Labor Votes by States (2022 Federal Elections)",
        "layer": [
          {
            "mark": "circle",
            "encoding": {
              "x": {
                "field": "Coalition",
                "type": "quantitative",
                "title": "Percentage Coalition Votes",
                "scale": {"domain": [15, 75]}
              },
              "y": {
                "field": "WeeklyIncome",
                "type": "quantitative",
                "title": "Weekly Income ($)",
                "scale": {"domain": [800, 2000]}
              },
              "color": {"field": "State", "type": "nominal"},
              "size": {
                "field": "UniversityGraduatesPerc",
                "title": "University Graduates (%)",
                "type": "quantitative",
                "scale": {
                  "type": "threshold",
                  "domain": [25, 30, 35, 40],
                  "range": [65, 150, 200, 350, 490]
                }
              },
              "tooltip": [
                {"field": "State", "type": "nominal"},
                {
                  "field": "WeeklyIncome",
                  "type": "quantitative",
                  "format": ",",
                  "title": "Weekly Income"
                },
                {
                  "field": "IncomeRank",
                  "type": "nominal",
                  "format": ",",
                  "title": "Income Rank /8"
                },
                {
                  "field": "UniversityGraduatesPerc",
                  "type": "quantitative",
                  "format": ",",
                  "title": "% Uni. Graduates"
                },
                {
                  "field": "Coalition",
                  "type": "nominal",
                  "format": ",",
                  "title": "Coalition Votes (%)"
                },
                {
                  "field": "Labour",
                  "type": "nominal",
                  "format": ",",
                  "title": "Labor Votes (%)"
                }
              ]
            }
          },
          {
            "data": {"values": [{}]},
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "bottom",
              "text": [
                "The Bubble Chart depicts how income may be negatively",
                "correlated with income..."
              ],
              "dx": 0,
              "dy": 225
            }
          }
        ]
      }
  ],
  "config": {}
}
